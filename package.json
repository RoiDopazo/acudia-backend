{
  "name": "acudia-backend",
  "version": "1.0.0",
  "description": "",
  "main": "handler.js",
  "scripts": {
    "start": "serverless offline start --stage local",
    "start:local": "nodemon --watch schema.graphql --watch 'resources/**/*' --watch 'mapping-templates/**/*' --watch 'lambdas/**' -e vtl,yml,js  --exec npm run start",
    "start:dev": "serverless offline start",
    "start:dynamo:dev": "serverless dynamodb install && serverless dynamodb start",
    "hosp:data:toJson": "convert-excel-to-json --sourceFile='.local/CNH_2020.xlsx' > .local/CNH.json",
    "hosp:data:integration:local": "serverless invoke local --function hospIntegration --stage local",
    "hosp:data:integration:dev": "serverless invoke local --function hospIntegration --stage development",
    "deploy": "serverless deploy --stage development",
    "remove": "serverless remove --stage development",
    "postinstall": "rm -rf node_modules/@conduitvc/appsync-emulator-serverless/node_modules/velocityjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RoiDopazo/acudia-backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RoiDopazo/acudia-backend/issues"
  },
  "homepage": "https://github.com/RoiDopazo/acudia-backend#readme",
  "devDependencies": {
    "@serverless/eslint-config": "^2.0.0",
    "eslint": "^7.0.0",
    "git-list-updated": "^1.2.1",
    "prettier": "^2.0.5",
    "serverless": "^1.70.0",
    "serverless-iam-roles-per-function": "^2.0.2",
    "velocityjs": "^2.0.0"
  },
  "dependencies": {
    "@middy/core": "^1.4.0",
    "convert-excel-to-json": "^1.7.0",
    "nodemon": "^2.0.4",
    "serverless-appsync-offline": "^1.4.0",
    "serverless-appsync-plugin": "^1.3.0",
    "serverless-dotenv-plugin": "^2.4.2",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-offline": "^6.1.5"
  }
}
